
$enterSec = 0.35s
$leaveSec = 0.4s
.fade-enter-active, .fade-leave-active
  transition opacity $leaveSec
.fade-enter, .fade-leave-to
  opacity 0
@keyframes yo-rotate
  from
    transform: rotate(0deg)
  to
    transform: rotate(360deg)
$blur = 5px
.go-enter-active
.go-leave-active
.back-leave-active
.back-enter-active
.goto-enter-active
.goto-leave-active
  position absolute !important
  top 0
  width 100%
  height 100%
  overflow hidden
  background-color #fff
.go-enter-active
  animation slideGo $enterSec ease
  z-index 2
.go-leave-active
  animation slideGoOpacity $leaveSec ease
  z-index 1
  &::before
    content ' '
    position: absolute
    left 0
    top 0
    bottom 0
    right 0
    display: block
    background-color rgba(#000, .1)
    backdrop-filter: blur(3px)
    -webkit-backdrop-filter: blur(3px)
    z-index 1000
.back-enter-active
  animation slideBackOpacity $enterSec ease
  z-index 1
.back-leave-active
  animation slideBack $leaveSec ease
  z-index 2
.goto-enter-active
  right 0
  animation goFade $enterSec ease
  z-index 1
.goto-leave-active
  z-index 2
  animation goFadeOpacity $leaveSec ease
@keyframes goFade
  from
    opacity 0
  to
    opacity 1
@keyframes goFadeOpacity
  from
    filter blur(0)
    opacity 1
  to
    filter blur($blur)
    opacity 0

@keyframes slideGo
  from
    right -100%
  to
    right 0
@keyframes slideGoOpacity
  from
    right 0
  to
    right 30%
@keyframes slideBack
  from
    right 0
  to
    right -100%
@keyframes slideBackOpacity
  from
    right 30%
  to
    right 0